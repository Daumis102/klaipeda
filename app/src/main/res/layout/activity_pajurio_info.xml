<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    android:id="@+id/infoLayout"
    tools:context="com.example.daumantas.klaipeda.PajurioInfo">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="60">
        <TextView
            android:id="@+id/oras"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:layout_marginRight="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:fontFamily="sans-serif"
            android:text=""
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_below="@+id/pajuris"
            android:layout_toLeftOf="@+id/vejas"
            android:layout_toStartOf="@+id/vejas" />

        <TextView
            android:id="@+id/vejas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/vanduo"
            android:layout_alignBottom="@+id/vanduo"
            android:layout_centerHorizontal="true"
            android:text=""
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/vanduo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/oras"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_toRightOf="@id/vejas"
            android:layout_toEndOf="@id/vejas"
            android:text=""
            android:textSize="20sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="220dp"
            tools:layout_editor_absoluteY="131dp" />

        <TextView
            android:id="@+id/banguotumas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignLeft="@+id/oras"
            android:layout_alignStart="@+id/oras"
            android:layout_below="@+id/oras"
            android:text=""
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/zydejimas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="220dp"
            tools:layout_editor_absoluteY="187dp"
            android:layout_below="@+id/gelbetojai"
            android:layout_alignLeft="@+id/gelbetojai"
            android:layout_alignStart="@+id/gelbetojai"
            android:layout_marginTop="12dp" />

        <TextView
            android:id="@+id/gelbetojai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/pramogos"
            android:layout_alignStart="@+id/pramogos"
            android:layout_below="@+id/pramogos"
            android:layout_marginTop="15dp"
            android:text=""
            android:textSize="20sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="220dp"
            tools:layout_editor_absoluteY="187dp" />

        <TextView
            android:id="@+id/pramogos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/banguotumas"
            android:layout_alignStart="@+id/banguotumas"
            android:layout_below="@+id/banguotumas"
            android:layout_marginTop="15dp"
            android:text=""
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pajuris"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:text=""
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" />
    </RelativeLayout>
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="40" />




</LinearLayout>
